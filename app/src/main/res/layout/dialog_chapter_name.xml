<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:padding="8dp">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:maxLength="25"
            android:id="@+id/etChapterName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDialogTitle" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Название главы"/>
    <TextView
            android:text="Глава ежедневника"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvDialogTitle" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@android:color/black" android:textSize="20sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:gravity="center"/>
    <Button
            android:text="@android:string/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnOk"
            app:layout_constraintTop_toBottomOf="@+id/etChapterName"
            android:background="@android:color/transparent"
            android:textColor="@color/colorPrimary" app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:text="@android:string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel"
            app:layout_constraintTop_toBottomOf="@+id/etChapterName" app:layout_constraintEnd_toStartOf="@+id/btnOk"
            android:background="@android:color/transparent"
            android:textColor="@color/colorPrimary"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/ivCover"
            app:layout_constraintTop_toBottomOf="@+id/etChapterName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:srcCompat="@drawable/default_cover1"/>
</androidx.constraintlayout.widget.ConstraintLayout>